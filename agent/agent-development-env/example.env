# .env file for Agent Development Environment
# Copy this file to .env and fill in your actual values

# Backend API Configuration
BACKEND_URL=http://localhost:3001
BACKEND_API_KEY=your-backend-api-key

# API Security
API_KEY=your-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
ENV=development

# Trust Token Security (MUST match Node.js API secret)
TRUST_TOKEN_SECRET=your-secure-trust-token-secret-key-here

# LLM Configuration
GEMINI_API_KEY=your-gemini-api-key-here
AGENT_LLM_MODEL=gemini-2.0-flash
AGENT_LLM_BASE_URL=
AGENT_LLM_TEMPERATURE=0.1

# LangSmith Configuration (Optional - for debugging and monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=mcp-security-agent

# Proxy Configuration
PROXY_PORT=3001
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000  # 1 hour in ms
CACHE_TTL=3600000         # 1 hour in ms
LOG_LEVEL=info

# Security Settings
MAX_FILE_SIZE=10485760    # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,md,json
REQUEST_TIMEOUT=30000     # 30 seconds in ms

# Development Settings
DEBUG=true
RELOAD=true