# MCP Security API Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Configuration
NODE_ENV=development
PORT=3000

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Security Secrets (CHANGE THESE IN PRODUCTION!)
TRUST_TOKEN_SECRET=your-trust-token-secret-here
ADMIN_AUTH_SECRET=your-admin-auth-secret-here
AUDIT_SECRET=your-audit-secret-here

# Sanitization Configuration
# Risk level mappings for different content classifications
SANITIZATION_RISK_MAPPINGS={"llm":"high","non-llm":"low","unclear":"medium","internal":"low","external":"high"}

# Final Sanitization Configuration
# Enable/disable final sanitization (default: true)
SANITIZATION_FINAL_MODE=true

# Default sanitization mode: 'final' or 'standard' (default: final)
SANITIZATION_DEFAULT_MODE=final

# Allow runtime configuration updates (default: true)
SANITIZATION_ALLOW_RUNTIME_OVERRIDE=true

# Enable strict validation mode (default: false)
SANITIZATION_STRICT_VALIDATION=false

# Advanced: JSON configuration object (overrides individual settings above)
# SANITIZATION_FINAL_CONFIG={"enabled":true,"defaultMode":"final","allowRuntimeOverride":true,"strictValidation":false}

# API Contract Validation
API_CONTRACT_VALIDATION_ENABLED=true

# N8N Configuration (for n8n service)
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-here

# Database Configuration (if using PostgreSQL)
# POSTGRES_PASSWORD=your-postgres-password-here