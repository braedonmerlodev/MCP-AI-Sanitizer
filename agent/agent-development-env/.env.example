# .env file for Agent Development Environment
BACKEND_URL=https://your-production-backend.com
BACKEND_API_KEY=your-backend-api-key

# API Security
API_KEY=your-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
ENV=development

# Trust Token Security (MUST match Node.js API secret)
TRUST_TOKEN_SECRET=your-secure-trust-token-secret-key-here

# LLM Configuration
GEMINI_API_KEY=your-api-gemini-api-key
AGENT_LLM_MODEL=gemini-2.0-flash

# LangSmith Configuration (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=mcp-security-agent

# Proxy Configuration
PROXY_PORT=3001
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600000  # 1 hour in ms
CACHE_TTL=3600000         # 1 hour in ms
LOG_LEVEL=info

# Sanitization Configuration
# Risk level mappings for different content classifications
SANITIZATION_RISK_MAPPINGS={"llm":"high","non-llm":"low","unclear":"medium","internal":"low","external":"high"}

# Final Sanitization Configuration
# Enable/disable final sanitization (default: true)
SANITIZATION_FINAL_MODE=true

# Default sanitization mode: 'final' or 'standard' (default: final)
SANITIZATION_DEFAULT_MODE=final

# Allow runtime configuration updates (default: true)
SANITIZATION_ALLOW_RUNTIME_OVERRIDE=true

# Enable strict validation mode (default: false)
SANITIZATION_STRICT_VALIDATION=false

# Advanced: JSON configuration object (overrides individual settings above)
# SANITIZATION_FINAL_CONFIG={"enabled":true,"defaultMode":"final","allowRuntimeOverride":true,"strictValidation":false}